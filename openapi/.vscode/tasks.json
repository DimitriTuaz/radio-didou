{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "options": {"cwd": "../server"},
      "command": "../server/build.sh",
      "args": [
        "openapi"
      ],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "clear": true
      },
      "problemMatcher": "$tsc-watch"
    }
  ]
}
